# MongoDB connection string. Use Atlas or local instance.
MONGO_URI=mongodb+srv://username:password@cluster.example.mongodb.net/warrify

# Express server port (defaults to 8080 if omitted).
PORT=8080

# Frontend origin used for CORS + OAuth redirects (Vite dev server by default).
FRONTEND_URL=http://localhost:5173

# Google OAuth credentials (Gmail API enabled, Web application).
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8080/auth/google/callback

# Session secret for express-session (use a long random string).
SESSION_SECRET=replace-with-long-random-string

# DeepSeek (or compatible) API credentials for AI-based PDF validation.
DEEPSEEK_API_KEY=sk-your-deepseek-api-key
DEEPSEEK_API_URL=https://api.deepseek.com/v1/chat/completions
